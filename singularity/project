Bootstrap: docker
From: ubuntu:20.04
Stage: build

%environment
    export DEBIAN_FRONTEND=noninteractive

%post
    export DEBIAN_FRONTEND=noninteractive
    apt-get update 
    apt-get install -y build-essential wget make git procps locales curl openssh-client
    apt-get clean 
    apt-get autoremove -y

    conda --version

    pip3 install pyscf numpy scipy matplotlib ipython jupyter pandas sympy h5py scikit-learn

    NOW=`date`
    echo "export NOW=\"${NOW}\"" >> $SINGULARITY_ENVIRONMENT